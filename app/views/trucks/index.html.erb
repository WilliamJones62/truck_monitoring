<p id="notice"><%= notice %></p>

<h1>Trucks</h1>

<table id="normal_dt"  class="stripe" class="mytable" class="display" cellspacing="0" >
  <thead>
    <tr>
      <th>Truck</th>
      <th>Type</th>
      <th>Acquired</th>
      <th>Install</th>
      <th>Deinstall</th>
      <th>Disposed</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= truck.truck_id %></td>
        <td><%= truck.vehicle_type %></td>
        <td> <%= display_date(truck.acquired) %> </td>
        <td> <%= display_date(truck.install) %> </td>
        <td> <%= display_date(truck.deinstall) %> </td>
        <td> <%= display_date(truck.disposed) %> </td>
        <td><%= link_to 'Show', truck %></td>
        <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
        <td><%= link_to 'Delete', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

