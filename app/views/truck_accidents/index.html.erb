<p id="notice"><%= notice %></p>

<h1>Truck Accidents</h1>
<h2>Truck Number: <%= @truck.truck_number %></h2>

<table id="normal_dt"  class="stripe" class="mytable" class="display" cellspacing="0" >
  <thead>
    <tr>
      <th>Accident date</th>
      <th>Driver</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @truck_accidents.each do |truck_accident| %>
      <tr>
        <td> <%= display_date(truck_accident.accident_date) %> </td>
        <td><%= truck_accident.driver %></td>
        <td><%= link_to 'Show', truck_truck_accident_path(@truck, truck_accident) %></td>
        <td><%= link_to 'Edit', edit_truck_truck_accident_path(@truck, truck_accident) %></td>
        <td><%= link_to 'Delete', [@truck, truck_accident], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @dept == "LOGISTICS" || @user == 'ADMIN' %>
  <%= link_to 'New Insured Truck Accident', new_truck_truck_accident_path() %>
<% end %>
<%= link_to 'Truck Index', trucks_path %>
