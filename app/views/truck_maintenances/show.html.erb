<p id="notice"><%= notice %></p>
<h2>Truck Number: <%= @truck.truck_number %> Last Updated: <%= display_date(@truck_maintenance.updated_at) %> By: <%= @truck_maintenance.user_id%></h2>

<h3>Services</h3>
<table id="normal_dt2"  class="stripe" class="mytable" class="display" cellspacing="0" >
  <thead>
    <tr>
      <th hidden> ID </th>
      <th> Scheduled date </th>
      <th> Service type </th>
      <th> Mileage </th>
      <th> Actual date </th>
      <th> Out of service date </th>
      <th> In service date </th>
    </tr>
  </thead>
  <tbody>
    <% @truck_maintenance.maintenance_schedules.each do |c| %>
    <tr>
      <td hidden> <%= c.id %> </td>
      <td> <%= display_date(c.scheduled_date) %> </td>
      <td> <%= c.maint_type %> </td>
      <td> <%= c.mileage %> </td>
      <td> <%= display_date(c.actual_date) %> </td>
      <td> <%= display_date(c.service_out) %> </td>
      <td> <%= display_date(c.service_in) %> </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_truck_truck_maintenance_path(@truck, @truck_maintenance) %>
<%= link_to 'Truck Index', trucks_path %>
